<!--顶部-->
<header class="header">
      <a href="javascript:;" class="back"></a>
      <h2>忘记密码</h2>
</header>

<!--中间-->
<section class="login-main">
        <!--错误信息提示-->
        <div class="item item-tips">
            <div class="err-msg">用户名不存在</div>
        </div>
        <!--登录表单-->
        <form action="" method="post">
        
            <div class="item item-phone">
            	  <i class="icon-tel"></i>
                <input class="txt-input txt-phone" type="number" pattern="\d*" placeholder="请输入手机号码">
            </div>
            
            <div class="item item-sms-captcha">
            		 <i class="icon-sms"></i>
                   <input class="txt-input txt-sms-captcha" type="tel" autocomplete="off" placeholder="请输入验证码">
                   <a href="javascript:;" class="btn-retransmit">获取验证码</a>
              </div>
            
            <div class="item item-password">
            	  <i class="icon-pwd"></i>
                <input class="txt-input txt-password" type="password" autocomplete="off" placeholder="请设置密码（8-20个字符）" required>
                <b class="tp-btn btn-off"></b>
            </div>
            
            <div class="item item-btns">
                <a class="btn-login btn-findpwd btn-disabled" href="javascript:;">确定</a>
            </div>
        </form>
  </section>
<!--/中间-->