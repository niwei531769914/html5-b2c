
<!--顶部-->
<header class="header" style="border-bottom: 0px;">
    <a href="javascript:;" class="back"></a>
    <h2>幸运大转盘</h2>
</header>

<div class="nwrapper">
        <!--顶部-->
        <div class="dial_top">

        </div>
        
        <!--转盘-->
        <div class="dial_main">
            <div id="lottery">
                <table>
                    <tr>
                        <td class="lottery-unit lottery-unit-0">
                            {{{lehu-lottery luckProbabilityList 0}}}
                        </td>
                        <td class="lottery-unit lottery-unit-1">
                            {{{lehu-lottery luckProbabilityList 1}}}
                        </td>
                        <td class="lottery-unit lottery-unit-2">
                            {{{lehu-lottery luckProbabilityList 2}}}
                        </td>
                    </tr>
                    <tr>
                        <td class="lottery-unit lottery-unit-7">
                            {{{lehu-lottery luckProbabilityList 7}}}
                        </td>
                        <td class="lottery-bt">
                            <a href="javascript:;">点击开始</a>
                        </td>
                        <td class="lottery-unit lottery-unit-3">
                            {{{lehu-lottery luckProbabilityList 3}}}
                        </td>
                    </tr>
                    <tr>
                        <td class="lottery-unit lottery-unit-6">
                            {{{lehu-lottery luckProbabilityList 6}}}
                        </td>
                        <td class="lottery-unit lottery-unit-5">
                            {{{lehu-lottery luckProbabilityList 5}}}
                        </td>
                        <td class="lottery-unit lottery-unit-4">
                            {{{lehu-lottery luckProbabilityList 4}}}
                        </td>
                    </tr>
                </table>
            </div>
            <div class="dial_main_box" id="nologin">
                先<span id="login">登录</span>再抽奖哦!
            </div>
            <div class="dial_main_box" id="alreadylogin" style="display: none">
                剩余<span id="login">{{data.lasttimes}}</span>次机会
            </div>
        </div>

        <!--名单-->
        <div class="dial_msg">
            <div class="dial_msg_box">
                <ul>
                {{#each zhongJiangJiLu}}
                    <li><em>{{userPhone}}</em><span>中了{{prizeName}}</span></li>
                {{/each}}
                </ul>
            </div>
        </div>
        
        <!--说明-->
        <div class="dial_footer">
            <span>活动规则</span>
            <ul>
            </ul>
        </div>

        
    </div>
